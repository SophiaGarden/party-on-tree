{% extends "AdventureTimeBundle::layout.html.twig" %}
{% block content %}

{% for personage in personages %}
    <a href="{{ url('personage', {'id': personage.id }) }}" > <img src="{{ asset('img/personages/' ~ personage.name ~ '.png') }}" class="img-responsive" style="width: 200px; display:none"></a>
{% endfor %}

{% endblock %}

{% block js %}
    <script>
        $(function(){
            $('img').show('slow');
        });
    </script>
{% endblock %}
